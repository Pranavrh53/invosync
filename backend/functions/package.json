{
    "name": "invosync-backend",
    "version": "1.0.0",
    "description": "InvoSync Backend - Modular invoice and client management system",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "dev": "tsc --watch",
        "dev:server": "npm run build && node lib/server.js"
    },
    "engines": {
        "node": "18"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "firebase-admin": "^11.11.0",
        "firebase-functions": "^4.5.0",
        "razorpay": "^2.9.6"
    },
    "devDependencies": {
        "@types/cors": "^2.8.15",
        "@types/express": "^4.17.20",
        "@types/node": "^20.9.0",
        "firebase-functions-test": "^3.1.0",
        "typescript": "^5.2.2"
    },
    "private": true
}
